- hosts: dockerhost
  tasks:

  - name: stop existing container
    ansible.builtin.command: docker stop webapp-server
    ignore_errors: true

  - name: remove the container
    ansible.builtin.command: docker rm webapp-server

  - name: remove image
    ansible.builtin.command: docker image rm balaban/webapp-b-${BUILD_NUMBER}:latest

  - name: create container  
    ansible.builtin.command: docker run -d --name webapp-server -p 8080:8080 balaban/webapp-b-${BUILD_NUMBER}:latest